{#
/**
 * @file
 * The views infinite scroll pager template.
 */
#}
{% if items.next %}
<ul{{ attributes.addClass('pager') }}>
  <li class="pager__item is-infinite">
    <a class="button" href="{{ items.next.href }}" title="{{ options.button_text }}" rel="next">{{ options.button_text }}</a>
  </li>
</ul>
{% endif %}
